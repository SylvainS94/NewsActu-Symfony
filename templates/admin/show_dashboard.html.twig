{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="text-center">Tableau de Bord</h1>
    
    {% include 'include/_flashes.html.twig' %}

    <h3 class="text-center">Tous les articles</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Catégorie</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Créé le</th>
                <th>Modifié le</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles | reverse %} <!-- reverse = classé par id decroissant (derniers articles en premier comme ORDER BY desc)-->
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.category.name }}</td> <!-- relation entre classes donc category devient un objet avec un id (on peut appeller une de ses proprietes) -->
                    
                    <td>{{ article.title | length > 20 ? article.title|slice(0,20) ~ '...' : article.title }}</td> <!-- si la condition (string sup a 20) on coupe et cela indique ..., sinon il s'affiche normalement -->

                    <td>{{ article.content|length > 20 ? article.content|slice(0,20) ~ '...' : article.content }}</td>
                    <td>{{ article.createdAt | date('d/m/Y') }}</td>
                    <td>{{ article.updatedAt | date('d/m/Y') }}</td>
                    <td>
                        {% if article.deletedAt is null %}
                        
                            <a href="{{ path ('update_article', {'id': article.id} ) }}" class="btn btn-info"><i class="fa fa-edit"></i></a>
                            <a href="{{ path ('soft_delete_article', {'id': article.id} ) }}" onclick="return confirm('Voulez-vous vraiment archiver cet article ?')" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                        
                        {% else %}
                            <a href="{{ path ('restore_article', {'id': article.id} ) }}" class="btn btn-outline-info"><i class="fa fa-trash-restore"></i></a>
                            <a href="{{ path ('hard_delete_article', {'id': article.id} ) }}" onclick="return confirm('Voulez-vous vraiment supprimer définitivement cet article de la base de données ?')" class="btn btn-outline-danger"><i class="fa fa-times-circle"></i></a>
                        {% endif %}

                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}